


<h1>Books</h1>




  <table>
  <thead>

  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
  </thead>


  <tbody>
      <% @books.each do |book| %>
  <tr>
    <td>

    <span><%= book.title %></span>
    </td>

    <td>
    <span><%= book.body %></span>
    </td>

    <td>
   <th>

  <%= link_to 'Show', book_path(book) %>
  <%= link_to 'Edit', edit_book_path(book) %>
  <%= link_to 'Destroy', book_path(book),method: :delete,"data-confirm" => "Are you sure?"%>

   </th>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>
  
  <h2>New book </h2>

<% if @book.errors.any? %>
    
  <div class="alert-warning">
    <div class="alert1">
    <p><%= pluralize(@book.errors.count, "error") %></p>
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with model: @book, url:'/books', local:true do |f| %>
  
  <div class="field">
      <%= f.label :title %></br>
      <%= f.text_field :title %>

  </div>

<div class ="field">
    <%= f.label :body %></br>
    <%= f.text_area :body%>
</div>

<!--<div class ="actions">-->
  <%= f.submit 'Create Book' %>
<!--</div>-->


<% end %>